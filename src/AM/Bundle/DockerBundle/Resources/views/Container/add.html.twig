{% extends 'default/index.html.twig' %}


{% block title %}{% trans %}Add container{% endtrans %}{% endblock %}

{% block content %}
<div class="page-header">
    <h1>{% trans %}Create a container{% endtrans %}</h1>
</div>
{% if form is defined %}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group">
        <button class="btn btn-primary" type="submit"><i class="fa fa-plus"></i> {% trans %}Create container{% endtrans %}</button>
    </div>
    {{ form_end(form) }}
{% else %}
    <div class="alert alert-danger" role="alert">
        <p><i class="glyphicon glyphicon-exclamation-sign"></i> <strong>{% trans %}LittleShip could not connect to your Dockerâ€¦{% endtrans %}</strong></p>
        {% if error is defined %}
        <p>{{ error }}</p>
        {% endif %}
    </div>
{% endif %}
{% endblock %}

{% block javascripts %}
<script src="{{ asset('bundles/amdocker/js/add-container.js') }}"></script>
{% endblock %}